<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_16dp"
    android:background="@drawable/backgound_top_corner_bottom_sheet_dialog"
    app:layout_behavior="com.goggle.android.material.BottomSheet">

        <TextView
            android:id="@+id/tvLogoutTittle"
            style="@style/textview_tittle_item_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/txt_keluar"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLogoutMessage"
            style="@style/textview_sub_tittle_universal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_logout_message"
            app:layout_constraintEnd_toEndOf="@+id/tvLogoutTittle"
            app:layout_constraintStart_toStartOf="@+id/tvLogoutTittle"
            app:layout_constraintTop_toBottomOf="@+id/tvLogoutTittle" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/btnLogoutNo"
            style="@style/button_outline_border_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/txt_btn_batal"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/tvLogoutMessage"
            app:layout_constraintTop_toBottomOf="@+id/tvLogoutMessage" />

        <Button
            android:id="@+id/btnLogoutYes"
            style="@style/button_background_red_wrap_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/txt_keluar"
            app:layout_constraintEnd_toEndOf="@+id/tvLogoutMessage"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toBottomOf="@+id/tvLogoutMessage"/>


</androidx.constraintlayout.widget.ConstraintLayout>