<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    app:cardUseCompatPadding="true"
    android:elevation="2dp"
    app:cardCornerRadius="10dp"
    tools:ignore="ContentDescription" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_8dp">

        <ImageView
            android:id="@+id/imgItemPerangkat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_sipil" />

    <TextView
        android:id="@+id/tvItemTittlePerangkat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Puchlist 0/0"
        style="@style/textview_tittle_item_profile"
        app:layout_constraintEnd_toStartOf="@+id/tvItemPercentasePerangkat"
        app:layout_constraintStart_toEndOf="@+id/imgItemPerangkat"
        app:layout_constraintTop_toTopOf="@+id/imgItemPerangkat" />

    <TextView
        android:id="@+id/tvItemPercentasePerangkat"
        style="@style/textview_tittle_item_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        tools:text="50%"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemTittlePerangkat"
        app:layout_constraintEnd_toStartOf="@+id/imageView26"
        app:layout_constraintTop_toTopOf="@+id/tvItemTittlePerangkat" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgItemPerangkat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgItemPerangkat"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    <ProgressBar
        android:id="@+id/tvItemProgressPerangkat"
        style="@style/ProgressBarPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:indeterminateDrawable="@drawable/progress_bar_color"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toBottomOf="@+id/imgItemPerangkat"
        app:layout_constraintEnd_toStartOf="@+id/imageView26"
        app:layout_constraintStart_toEndOf="@+id/imgItemPerangkat"
        app:layout_constraintTop_toBottomOf="@+id/tvItemTittlePerangkat" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>