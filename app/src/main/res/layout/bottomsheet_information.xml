<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="25dp"
    android:background="@drawable/background_rounded_top_white_padding"
    android:layout_height="wrap_content"
    app:layout_behavior="com.goggle.android.material.BottomSheet">

    <TextView
        android:id="@+id/tvTittleInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        style="@style/textview_tittle_item_profile"
        android:textSize="@dimen/text_subtittle"
        tools:text="Formulir Terkirim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContentInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/textview_sub_tittle_universal"
        tools:text="Laporan Anda akan segera ditindaklanjuti maksimal 20 menit."
        app:layout_constraintEnd_toEndOf="@+id/tvTittleInfo"
        app:layout_constraintStart_toStartOf="@+id/tvTittleInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleInfo" />

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContentInfo"
            tools:srcCompat="@drawable/illustration_container"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/button_background_red"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/txt_oke_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>