<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/margin_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/margin_8dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/img_carousel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[3]" />
        <TextView
            android:layout_marginTop="@dimen/margin_8dp"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_tittle"
            tools:text="Selamat Datang"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/txt_tittle_carousel"/>
        <TextView
            android:layout_marginTop="@dimen/margin_8dp"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_medium"
            tools:text="Kini Anda bisa memantau tiket informasi, pengaduan &amp; permintaan dalam satu aplikasi."
            android:id="@+id/txt_description_carousel"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>